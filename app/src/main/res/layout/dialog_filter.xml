<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_10dp_top"
    android:padding="16dp">

    <View
        android:id="@+id/view_push"
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:background="@drawable/rounded_45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/main_filter"
        android:textColor="@color/color_black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_push" />

    <RadioGroup
        android:id="@+id/radio_group_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_title">

        <RadioButton
            android:id="@+id/filter_all"
            style="@style/RadioButtonFilter"
            android:text="@string/main_filter_all" />

        <RadioButton
            android:id="@+id/filter_student"
            style="@style/RadioButtonFilter"
            android:text="@string/main_filter_students" />

        <RadioButton
            android:id="@+id/filter_lector"
            style="@style/RadioButtonFilter"
            android:text="@string/main_filter_lectors" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>